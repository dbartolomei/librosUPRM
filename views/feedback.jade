#feedback_modal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
				h4.modal-title Give feedback to improve UPRMBOOKS
			.modal-body
					form.form-horizontal(action='/feedback', method='POST')
						.form-group
							label(for='name') Name
							input#name.form-control(type='text', name="name", placeholder='Name')
